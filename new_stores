<script>
    $(document).ready(function(e){
        init(e);
        function renderAll (){
            var categories = getStoreCategories();
            
            
            
          
            var coming_soon_stores = getComingSoonList();
            var new_stores = getNewStoresList();
            
            if (new_stores.length > 0){
                renderStoreList('#store_list_container','#store_list_template', new_stores, "A", "Z");
            }
            else{
                $('#new_stores').show();
            }
            
             if (coming_soon_stores.length > 0){
                renderStoreList('#store_list_container2','#store_list_template', coming_soon_stores, "A", "Z");
            }
            else{
                $('#coming_soon_stores').show();
            }
            show_content();
            
            
        }
        
		loadMallDataCached(renderAll); 
    })
</script>